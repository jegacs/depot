

<div class="login-box">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html=>{:class => "email-login"}) do |f|%>

  <h2>Iniciar sesion</h2>
  <div class="u-form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="u-form-group field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
  <div class="u-form-group field">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>
  <% end -%>

  <div class="actions u-form-group">
    <%= f.submit "Iniciar sesion" %>
  </div>
  <% end %>
  <div class="forgot-password">
    
    <!-- <%= render "devise/shared/links" %> -->
    
  </div>
</div>
