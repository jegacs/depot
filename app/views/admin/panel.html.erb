<h1>Panel de administracion</h1>
<h1>Productos</h1>
<table class="responstable">

  <tr>
    <th>Id</th>
    <th>Nombre</th>
    <th>Precio</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @products.each do |p| %>  
  <tr>
    <td><%= p.id%></td>
    <td><%=p.name%></td>
    <td><%=p.price%></td>
    <td><%=link_to 'Mostrar', p%></td>
    <td><%=link_to 'Editar', edit_product_path(p)%></td>
    <td><%=link_to 'Eliminar', p, method: :delete, data: { confirm: 'Â¿Seguro?'}%></td>
    
  </tr>
  <%end%>
  <tr>
    <td><%= link_to "Agregar producto", new_product_path%></td>
  </tr>
</table>

<h1>Ordenes</h1>
<table class="responstable">

  <tr>
    <!-- <th></th> -->
    <th>Usuario</th>
    <th>Articulos</th>
    <th>Direccion</th>
    <th>Estado</th>
    <!-- <th></th> -->
    <!-- <th></th> -->
  </tr>

  <% @orders.each do |order| %>  
  <tr>
    <td><%= order.cart.user.email%></td>

    <td>
      <% order.cart.line_products.each do |lp| %>
      <%= lp.quantity%>x <%= lp.product.name%>
      <%end%>
    </td>
    <td><%= order.address %>
    <td>
      <%= order.status %>
    </td>
  </tr>
  <%end%>
 

